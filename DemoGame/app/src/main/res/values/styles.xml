    <style name="ThemeforText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">15.3sp</item>
        <item name="android:background">#222222</item>
        <item name="android:backgroundTint">#e048ba</item>
        <item name="android:width">400dp</item>
        <item name="android:height">400dp</item>
    </style>

    <style name="ThemeforHintArea" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">#222222</item>
        <item name="android:backgroundTint">#e048ba</item>
    </style>

    <style name="ThemeforTextLayout" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">400dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">#222222</item>
        <item name="android:backgroundTint">#e048ba</item>
        <item name="android:width">400dp</item>
        <item name="android:height">400dp</item>
    </style>


    <style name="MyButtonStyle" parent="android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>